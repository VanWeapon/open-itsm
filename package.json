{
	"name": "open-itsm",
	"version": "0.0.1",
	"description": "Open source ITSM database",
	"main": "./dist/main.js",
	"directories": {
		"example": "examples"
	},
	"scripts": {
		"start": "SET NODE_ENV=development&& ts-node src/index.ts",
		"compile": "tsc -w",
		"nodemon": "SET NODE_ENV=development&& nodemon src/index.ts",
		"test": "SET NODE_ENV=test&& jest",
		"test-server": "SET NODE_ENV=test&& ts-node src/index.ts",
		"drop-dev": "ts-node ./node_modules/typeorm/cli.js schema:drop -c \"development\"",
		"drop-test": "ts-node ./node_modules/typeorm/cli.js schema:drop -c \"test\"",
		"clean-dev": "bash rm -rf src/database/migration/*",
		"migration-gen-dev": "ts-node ./node_modules/typeorm/cli.js migration:generate -c \"development\" -n",
		"migration-run-dev": "ts-node ./node_modules/typeorm/cli.js migration:run -c \"development\"",
		"migration-gen-test": "ts-node ./node_modules/typeorm/cli.js migration:generate -c \"test\" -n",
		"migration-run-test": "ts-node ./node_modules/typeorm/cli.js migration:run -c \"test\"",
		"migration-gen-prod": "typeorm migration:generate -c default -n",
		"migration-run-prod": "typeorm migration:run -c default"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/VanWeapon/open-itsm.git"
	},
	"keywords": [
		"itsm"
	],
	"author": "Luke Van Epen",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/VanWeapon/open-itsm/issues"
	},
	"homepage": "https://github.com/VanWeapon/open-itsm#readme",
	"dependencies": {
		"dotenv": "^8.2.0",
		"koa": "^2.13.0",
		"koa-bodyparser": "^4.3.0",
		"koa-router": "^9.4.0",
		"mysql": "^2.14.1",
		"node-postgres": "^0.6.2",
		"pg": "^8.4.1",
		"pg-cursor": "^2.4.1",
		"pg-format": "^1.0.4",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.2.28",
		"uuid": "^8.3.1",
		"supertest": "^5.0.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.12.0",
		"@babel/preset-typescript": "^7.12.0",
		"@types/assert": "^1.5.2",
		"@types/jest": "^26.0.14",
		"@types/koa": "^2.11.5",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-router": "^7.4.1",
		"@types/nedb": "^1.8.11",
		"@types/node": "^8.0.29",
		"@types/pg": "^7.14.5",
		"@types/pg-format": "^1.0.1",
		"@types/supertest": "^2.0.10",
		"@types/uuid": "^8.3.0",
		"jest": "^26.5.3",
		"nodemon": "^2.0.5",
		"supertest": "^5.0.0",
		"ts-jest": "^26.4.1",
		"ts-node": "3.3.0",
		"typescript": "^4.0.3"
	}
}
